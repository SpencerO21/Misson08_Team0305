@model Task

<h1>Task to do list</h1>
<h3>Enter the information below to add a task to your personal time managment matrix.</h3>

<form method="post">

    <input type="hidden" asp-for="TaskId" />

    <label asp-for="Task1">Task Name:</label>
    <input asp-for="Task1" />
    <br />
    <label asp-for="DueDate">Task Due Date:</label>
    <input asp-for="DueDate" />
    <br />
    <label asp-for="QuadId">Task Quadrant:</label>
    <input asp-for="QuadId" />
    <br />
    <label asp-for="CategoryId">What is your task category?</label>
    <select asp-for="CategoryId">
        <option value="4">Church</option>
        <option value="3">Work</option>
        <option value="2">School</option>
        <option value="1">Home</option>
    </select>
    <br />
    <label asp-for="Completed"> Has the task been completed?</label>
    <select asp-for="Completed">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />

    <button type="submit">Submit Task</button>

    <div asp-validation-summary="All"></div>
</form>