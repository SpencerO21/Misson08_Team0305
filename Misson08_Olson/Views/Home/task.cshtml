@model Misson08_Olson.Models.Task

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-sm-6">
            <h1>Task to do list</h1>
            <h3>Enter the information below to add a task to your personal time management matrix.</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-7 col-sm-5">
            <form method="post">

                <input type="hidden" asp-for="TaskId" />

                <div class="form-group">
                    <label asp-for="Task1">Task Name:</label>
                    <input asp-for="Task1" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DueDate">Task Due Date:</label>
                    <input asp-for="DueDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="QuadId">Task Quadrant:</label>
                    <input asp-for="QuadId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">What is your task category?</label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">Select a Category</option>
                        @foreach (Category cat in ViewBag.categories)
                        {
                            <option value="@cat.CategoryId">@cat.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Completed">Has the task been completed?</label>
                    <select asp-for="Completed" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Submit Task</button>

                <div asp-validation-summary="All"></div>
            </form>
        </div>
    </div>
</div>
