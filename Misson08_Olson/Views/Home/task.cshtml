@{
}

@model Task

<h1>Task to do list</h1>
<h3>Enter the information below to add a task to your personal time managment matrix.</h3>

<form method="post">

    <input type="hidden" asp-for="TaskId" />

    <label>Task Name:</label>
    <input asp-for="Task" />
    <br />
    <label>Task Due Date:</label>
    <input asp-for="Date" />
    <br />
    <label>Task Quadrant:</label>
    <input asp-for="Quadrant" />
    <br />
    <label>What is your task category?</label>
    <select asp-for="Category">
        <option value="Church">Church</option>
        <option value="Work">Work</option>
        <option value="School">School</option>
        <option value="Home">Home</option>
    </select>
    <br />
    <label> Has the task been completed?</label>
    <select asp-for="Completed">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <button type="submit">Submit Task</button>

    <div asp-validation-summary="All"></div>
</form>